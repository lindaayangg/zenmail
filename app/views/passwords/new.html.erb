<% content_for :auth_header do %>
  <h2 class="mt-2 sm:mt-6 text-2xl sm:text-3xl font-bold tracking-tight">Reset your password</h2>
  <p class="mt-1 sm:mt-2 text-xs sm:text-sm opacity-75">
    Enter your email address and we'll send you instructions
  </p>
<% end %>

<%= render layout: 'shared/auth_layout' do %>
  <%= form_for :password, url: passwords_path, class: "space-y-4 sm:space-y-6" do |form| %>
    <div class="form-control">
    <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Email</legend>
        <%= form.email_field :email, class: "input input-md input-bordered w-full", placeholder: "you@example.com" %>
      </fieldset>
    </div>

    <div class="form-control mt-4">
      <%= form.submit "Send reset instructions", class: "btn btn-primary w-full text-sm" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p class="text-sm">
      Remember your password?
      <%= link_to "Back to sign in", sign_in_path, class: "link link-hover font-medium" %>
    </p>
  </div>
<% end %>
