<% content_for :auth_header do %>
  <h2 class="mt-2 sm:mt-4 text-2xl sm:text-3xl font-bold tracking-tight">Welcome back!</h2>
  <p class="mt-1 sm:mt-2 text-xs sm:text-sm opacity-75">
    Sign in to continue to EasyStory
  </p>
<% end %>
<%= render layout: 'shared/auth_layout' do %>
  <%= form_for :session, url: session_path, class: "space-y-2" do |form| %>
    <div class="form-control">
      <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Email</legend>
        <%= form.email_field :email, class: "input input-md w-full", placeholder: "you@example.com" %>
      </fieldset>
    </div>
    <div class="form-control">
      <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Password</legend>
        <%= form.password_field :password, class: "input input-md w-full", placeholder: "Password" %>
      </fieldset>
    </div>
    <div class="form-control mt-4">
      <%= form.submit t(".submit", default: "Sign in"), class: "btn btn-primary w-full text-sm" %>
    </div>
    <div class="divider text-[10px] sm:text-xs uppercase">or</div>
    <div class="form-control">
      <%= link_to '/auth/google_oauth2', data: { turbo: false }, class: "btn btn-outline w-full text-sm" do %>
        <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
          <path fill="none" d="M0 0h48v48H0z">
          </path>
        </svg>
        Sign in with Google
      <% end %>
    </div>
  <% end %>
  <div class="mt-4 flex items-center justify-between">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: "text-sm link link-hover" %>
    <% end %>
    <% if Clearance.configuration.allow_password_reset? %>
      <%= link_to t(".forgot_password"), new_password_path, class: "text-sm link link-hover" %>
    <% end %>
  </div>
<% end %>
