<nav class="text-sm breadcrumbs mb-4" aria-label="Breadcrumb">
  <ol class="flex items-center">
    <% breadcrumb_items.each_with_index do |item, index| %>
      <li class="flex items-center">
        <% if item[:last] %>
          <span class="text-gray-900 dark:text-white font-medium"><%= breadcrumb_label(item) %></span>
        <% else %>
          <%= link_to(breadcrumb_label(item), item[:item], class: "text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 flex items-center") %>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>

<script type="application/ld+json">
<%= raw breadcrumb_schema.to_json %>
</script> 