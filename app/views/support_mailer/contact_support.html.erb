<!-- Email Wrapper -->
<table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#f6f8fa;padding:40px 0;">
  <tr>
    <td align="center">
      <table width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width:600px;background:#fff;border-radius:16px;box-shadow:0 2px 8px rgba(0,0,0,0.04);padding:0 24px 24px 24px;">
        <tr>
          <td align="center" style="padding:32px 0 16px 0;">
            <img src="https://i.ibb.co/nMKffCXT/icon.png" alt="EasyStory Logo" width="100" style="display:block;margin-bottom:12px;">
            <h1 style="margin:0;font-size:24px;font-family:sans-serif;color:#2d3748;">EasyStory Support Request</h1>
          </td>
        </tr>
        <tr>
          <td style="padding:8px 0 0 0;">
            <p style="font-size:16px;font-family:sans-serif;color:#4a5568;margin:0 0 16px 0;">
              <strong>From:</strong> <%= @user.name || @user.email %>
            </p>
            <p style="font-size:16px;font-family:sans-serif;color:#4a5568;margin:0 0 16px 0;">
              <strong>Email:</strong> <a href="mailto:<%= @user.email %>" style="color:#3182ce;text-decoration:none;"><%= @user.email %></a>
            </p>
            <p style="font-size:16px;font-family:sans-serif;color:#4a5568;margin:0 0 16px 0;">
              <strong>Subject:</strong> <%= @subject %>
            </p>
            <p style="font-size:16px;font-family:sans-serif;color:#4a5568;margin:0 0 8px 0;">
              <strong>Message:</strong>
            </p>
            <div style="font-size:16px;font-family:sans-serif;color:#2d3748;background:#f7fafc;padding:4px 16px 4px 16px;border-radius:8px;margin-bottom:24px;">
              <%= simple_format(@message) %>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>