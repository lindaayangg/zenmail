<% content_for :auth_header do %>
  <h2 class="mt-2 sm:mt-4 text-2xl sm:text-3xl font-bold tracking-tight">Create your account</h2>
  <p class="mt-1 sm:mt-2 text-xs sm:text-sm opacity-75">
    Start showcasing your work using EasyStory!
  </p>
<% end %>
<%= render layout: 'shared/auth_layout' do %>
  <%= form_for @user, class: "space-y-2" do |form| %>
    <div class="form-control">
      <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Name</legend>
        <%= form.text_field :name, class: "input input-md input-bordered w-full", placeholder: "Name", autocomplete: "name"  %>
      </fieldset>
    </div>
    <div class="form-control">
      <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Email</legend>
        <%= form.email_field :email, class: "input input-md input-bordered w-full", placeholder: "you@example.com", autocomplete: "email" %>
      </fieldset>
    </div>
    <div class="form-control">
      <fieldset class="fieldset">
        <legend class="fieldset-legend text-sm">Password</legend>
        <%= form.password_field :password, class: "input input-md input-bordered w-full", placeholder: "Password", autocomplete: "new-password"  %>
      </fieldset>
    </div>
    <% if @user.errors.any? %>
      <div role="alert" class="alert alert-error bg-error/10 text-error text-xs sm:text-sm mt-2 sm:mt-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span><%= @user.errors.full_messages.to_sentence %></span>
      </div>
    <% end %>
    <div class="form-control mt-4">
      <%= form.submit "Create account", class: "btn btn-primary w-full text-sm" %>
    </div>
    <div class="divider text-[10px] sm:text-xs uppercase">or continue with</div>
    <div class="form-control">
      <%= link_to '/auth/google_oauth2', data: { turbo: false }, class: "btn btn-outline w-full text-sm" do %>
        <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
          <path fill="none" d="M0 0h48v48H0z"></path>
        </svg>
        Sign up with Google
      <% end %>
    </div>
    <div class="mt-4 text-center">
      <p class="text-sm">
        Already have an account?
        <%= link_to t(".sign_in", default: "Sign in"), sign_in_path, class: "link link-hover font-medium" %>
      </p>
    </div>
  <% end %>
<% end %>
